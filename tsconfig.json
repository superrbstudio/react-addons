{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2021"
    ],
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "outDir": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "!src/**/*"
  ]
}
